{
    "info": {
        "name": "Live Auction Platform API",
        "description": "Complete API collection for testing the Live Auction Platform REST endpoints",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:8000",
            "type": "string"
        },
        {
            "key": "itemId",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Health Check",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/api/health",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "health"
                    ]
                },
                "description": "Check if the server is running and healthy"
            },
            "response": []
        },
        {
            "name": "Get All Auction Items",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "// Save first item ID to collection variable",
                            "const response = pm.response.json();",
                            "if (response.success && response.data.length > 0) {",
                            "    pm.collectionVariables.set('itemId', response.data[0].id);",
                            "    console.log('Saved itemId:', response.data[0].id);",
                            "}"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/api/items",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "items"
                    ]
                },
                "description": "Retrieve all auction items with their current status"
            },
            "response": []
        },
        {
            "name": "Get Specific Auction Item",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/api/items/{{itemId}}",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "items",
                        "{{itemId}}"
                    ]
                },
                "description": "Get details of a specific auction item by ID. Make sure to run 'Get All Auction Items' first to populate the itemId variable."
            },
            "response": []
        },
        {
            "name": "Get Bid History",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/api/items/{{itemId}}/history",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "items",
                        "{{itemId}}",
                        "history"
                    ]
                },
                "description": "Get all bids placed on a specific auction item"
            },
            "response": []
        },
        {
            "name": "Create New Auction Item",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"title\": \"iPhone 15 Pro Max 256GB\",\n  \"description\": \"Brand new sealed iPhone 15 Pro Max in Natural Titanium color with 256GB storage\",\n  \"startingPrice\": 1000.00,\n  \"imageUrl\": \"https://images.unsplash.com/photo-1678652197831-2d180705cd2c\",\n  \"category\": \"Electronics\",\n  \"auctionEndTime\": \"2026-01-29T04:00:00.000Z\"\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/api/items",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "items"
                    ]
                },
                "description": "Create a new auction item. Update the auctionEndTime to a future date/time."
            },
            "response": []
        },
        {
            "name": "Create Auction - MacBook Pro",
            "request": {
